# =============================================================================
# CalX Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3000
NODE_ENV=development
# Set to 'production' in production environment

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
# Get this from Supabase Dashboard > Settings > Database > Connection string

# -----------------------------------------------------------------------------
# Authentication Secrets
# -----------------------------------------------------------------------------
# JWT secret for web user authentication (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters

# Secret for hashing device tokens (min 32 characters)
DEVICE_TOKEN_SECRET=your-device-token-secret-min-32-characters

# JWT expiration time
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# AI Provider API Keys (Configure the ones you use)
# -----------------------------------------------------------------------------

# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-xxx

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-xxx

# Google (Gemini)
GOOGLE_AI_API_KEY=xxx

# DeepSeek
DEEPSEEK_API_KEY=sk-xxx

# Perplexity
PERPLEXITY_API_KEY=pplx-xxx

# Groq
GROQ_API_KEY=gsk_xxx

# OpenRouter (access to multiple models)
OPENROUTER_API_KEY=sk-or-xxx

# -----------------------------------------------------------------------------
# Firmware Storage (Supabase Storage)
# -----------------------------------------------------------------------------
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Logging & Monitoring (Optional)
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# SENTRY_DSN=https://xxx@sentry.io/xxx

# -----------------------------------------------------------------------------
# CORS (comma-separated origins allowed)
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
