{
    "info": {
        "name": "CalX Backend API",
        "description": "Complete API collection for CalX IoT backend",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000"
        },
        {
            "key": "jwtToken",
            "value": ""
        },
        {
            "key": "deviceToken",
            "value": ""
        },
        {
            "key": "deviceId",
            "value": "calx_TEST01"
        }
    ],
    "item": [
        {
            "name": "Health",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/health"
                    }
                }
            ]
        },
        {
            "name": "Web Auth",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/auth/register",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.data && json.data.token) {",
                                    "  pm.collectionVariables.set('jwtToken', json.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Device Binding",
            "item": [
                {
                    "name": "Request Bind Code",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/device/bind/request",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"device_id\": \"{{deviceId}}\"\n}"
                        }
                    }
                },
                {
                    "name": "Check Bind Status",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/bind/status?device_id={{deviceId}}"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.device_token) {",
                                    "  pm.collectionVariables.set('deviceToken', json.device_token);",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Confirm Bind (Web)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/bind/confirm",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"bind_code\": \"XXXX\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Device Operations",
            "item": [
                {
                    "name": "Send Heartbeat",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/device/heartbeat",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"battery_percent\": 85,\n  \"power_mode\": \"NORMAL\",\n  \"firmware_version\": \"1.0.0\"\n}"
                        }
                    }
                },
                {
                    "name": "Get Settings",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/settings",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get File",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/file",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "Chat",
            "item": [
                {
                    "name": "Get Messages (Device)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/chat",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Get Messages Since (Device)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/chat?since=2024-01-01T00:00:00.000Z",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Send Message (Device)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/device/chat/send",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Hello from device!\"\n}"
                        }
                    }
                },
                {
                    "name": "Send Message (Web)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/chat/send",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"content\": \"Hello from web!\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "AI",
            "item": [
                {
                    "name": "AI Query",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/device/ai/query",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"prompt\": \"What is the square root of 144?\"\n}"
                        }
                    }
                },
                {
                    "name": "Continue AI Response",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/ai/continue?cursor=query_xxx",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "File",
            "item": [
                {
                    "name": "Upload File (Web)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/file/upload",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"content\": \"This is my note content.\\nLine 2.\\nLine 3.\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Device Settings (Web)",
            "item": [
                {
                    "name": "Update Settings",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/device/settings",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"text_size\": \"LARGE\",\n  \"screen_timeout\": 60,\n  \"ai_config\": {\n    \"provider\": \"OPENAI\",\n    \"model\": \"gpt-4o-mini\",\n    \"temperature\": 0.5\n  }\n}"
                        }
                    }
                },
                {
                    "name": "Get Activity Log",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/web/device/{{deviceId}}/activity",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "List Devices",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/web/device/list",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "name": "OTA Updates",
            "item": [
                {
                    "name": "Check for Updates (Device)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/update/check",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Download Firmware (Device)",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/device/update/download?version=1.0.1",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{deviceToken}}"
                            }
                        ]
                    }
                },
                {
                    "name": "Trigger OTA (Web)",
                    "request": {
                        "method": "POST",
                        "url": "{{baseUrl}}/web/device/update",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"firmware_id\": \"uuid-here\"\n}"
                        }
                    }
                },
                {
                    "name": "List Firmware",
                    "request": {
                        "method": "GET",
                        "url": "{{baseUrl}}/web/device/update/firmware",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwtToken}}"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}