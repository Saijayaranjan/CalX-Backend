generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model activity_logs {
  id                String    @id
  device_id         String    @unique
  last_ai_query     DateTime?
  last_file_sync    DateTime?
  last_chat_message DateTime?
  devices           devices   @relation(fields: [device_id], references: [id])
}

model ai_chunks {
  id         String   @id
  query_id   String   @unique
  device_id  String
  chunks     String[]
  cursor     Int      @default(0)
  expires_at DateTime
  created_at DateTime @default(now())

  @@index([expires_at])
  @@index([query_id])
}

model ai_configs {
  id          String     @id
  device_id   String     @unique
  provider    AIProvider @default(OPENAI)
  model       String     @default("gpt-4o-mini")
  max_chars   Int        @default(2500)
  temperature Float      @default(0.3)
  api_key     String?
  devices     devices    @relation(fields: [device_id], references: [id])
}

model bind_codes {
  id         String   @id
  code       String   @unique
  device_id  String
  expires_at DateTime
  used       Boolean  @default(false)
  created_at DateTime @default(now())
  devices    devices  @relation(fields: [device_id], references: [id])

  @@index([code, expires_at])
}

model chat_messages {
  id         String     @id
  device_id  String
  sender     SenderType
  content    String     @db.VarChar(2500)
  created_at DateTime   @default(now())
  devices    devices    @relation(fields: [device_id], references: [id])

  @@index([device_id, created_at])
}

model devices {
  id               String          @id
  device_id        String          @unique
  owner_id         String?
  mac_address      String
  firmware_version String          @default("1.0.0")
  last_seen        DateTime?
  online           Boolean         @default(false)
  battery_percent  Int             @default(100)
  power_mode       PowerMode       @default(NORMAL)
  text_size        TextSize        @default(NORMAL)
  keyboard         KeyboardType    @default(QWERTY)
  screen_timeout   Int             @default(30)
  device_token     String?
  token_revoked    Boolean         @default(false)
  created_at       DateTime        @default(now())
  pending_token    String?
  activity_logs    activity_logs?
  ai_configs       ai_configs?
  bind_codes       bind_codes[]
  chat_messages    chat_messages[]
  users            users?          @relation(fields: [owner_id], references: [id])
  files            files?
  ota_jobs         ota_jobs[]
}

model files {
  id         String   @id
  device_id  String   @unique
  content    String   @db.VarChar(4000)
  char_count Int
  updated_at DateTime
  devices    devices  @relation(fields: [device_id], references: [id])
}

model firmware {
  id           String     @id
  version      String     @unique
  storage_path String
  checksum     String
  file_size    Int
  notes        String?
  created_at   DateTime   @default(now())
  ota_jobs     ota_jobs[]
}

model ota_jobs {
  id          String    @id
  device_id   String
  firmware_id String
  status      OTAStatus @default(PENDING)
  created_at  DateTime  @default(now())
  updated_at  DateTime
  devices     devices   @relation(fields: [device_id], references: [id])
  firmware    firmware  @relation(fields: [firmware_id], references: [id])

  @@index([device_id, status])
}

model users {
  id            String    @id
  email         String    @unique
  password_hash String
  created_at    DateTime  @default(now())
  devices       devices[]
}

enum AIProvider {
  OPENAI
  ANTHROPIC
  GEMINI
  DEEPSEEK
  PERPLEXITY
  GROQ
  OPENROUTER
}

enum KeyboardType {
  QWERTY
  T9
}

enum OTAStatus {
  PENDING
  DOWNLOADING
  SUCCESS
  FAILED
  ROLLED_BACK
}

enum PowerMode {
  NORMAL
  LOW
}

enum SenderType {
  DEVICE
  WEB
}

enum TextSize {
  SMALL
  NORMAL
  LARGE
}
